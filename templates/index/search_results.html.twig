{% extends 'base.html.twig' %}

{% block title %}Результаты поиска{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}"> {# Используем тот же CSS файл #}
{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Результаты поиска для "{{ query }}"</h1>
        <hr>

        <div class="row">
            {% for item in results %}
                <div class="col-md-4">
                    <a href="{{ path('app_shopItem', {'id': item.id}) }}" class="itemClass">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body">
                                <img src="{{ asset('images/' ~ item.id ~ '/image.jpg') }}" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Картинка не найдена">
                                <h4>{{ item.title }}</h4>
                                <p class="card-text">{{ item.defcription }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5>{{ item.price }} руб.</h5>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
