{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1>{{ title }}</h1>
        <hr>

        <div class="row">
            <div class="col-auto d-none d-lg-block">
                <img src="{{ asset('images/ФОТО.JPG') }}" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Меня зовут Румия">
            </div>
            <div class="col p-4 d-flex flex-column position-static">
                <p class="mb-auto">{{ description }}</p>
                <h3 class="mb-1">{{ price }} рублей</h3>
                <a href="{{ path('app_shopCartAdd', {'id': shopItem.id, 'sessionId': sessionId ? sessionId : 'default_value'}) }}" class="btn btn-success mt-2" style="width: 200px">Добавить в корзину</a>
            </div>
        </div>
    </div>
{% endblock %}
