{# templates/index/shopItem.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>{{ title }}</h1>
        <hr>

        <div class="row">
            <div class="col-auto d-none d-lg-block">
                <img src="{{ asset('images/ФОТО.JPG') }}" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Меня зовут Румия">
            </div>
            <div class="col p-4 d-flex flex-column position-static">
                <p class="mb-auto">{{ description }}</p>
                <h3 class="mb-1">{{ price }} рублей</h3>

                {# Используем оператор default для sessionId #}
                <form action="{{ path('app_shopCartAdd', {'id': id, 'sessionId': sessionId | default('default_value')}) }}" method="post">
                    <button type="submit">Добавить в корзину</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
